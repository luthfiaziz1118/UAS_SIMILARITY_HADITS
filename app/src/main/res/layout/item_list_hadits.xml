<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_hadits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                tools:text="Perbandingan hadist tentang Ilmu" />

            <TextView
                android:id="@+id/txt_hadits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/textColorBlack"
                tools:text="1. Hadits Pertama\n2. Hadits Kedua" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageView
                    android:id="@+id/check_hadits"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check" />
                <ImageView
                    android:id="@+id/edit_hadits"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit"
                    android:layout_marginLeft="7dp"/>
                <ImageView
                    android:id="@+id/delete_hadits"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/delete"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>